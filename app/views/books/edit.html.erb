<% provide(:title, "本の情報編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@book) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class = 'form-group'>
          <%= f.label :name %>　<span class="input-need"></span>
          <%= f.text_field :name, class: 'form-control', id: 'book_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :thoughts %>　<span class="input-unneed"></span>
          <%= f.text_field :thoughts, size: "60x4", class: 'form-control', id: 'book_thoughts' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>