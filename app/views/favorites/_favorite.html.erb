<% @book = Book.find(favorite.book_id) %>
<% user = @book.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-book">
    <div class="col-md-2">
      <%= link_to((image_tag @book.picture.url), book_path(@book), class: 'book-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @book.name, book_path(@book) %></p>
      <p><%= simple_format(@book.thoughts) %></p>
      <p class="read-user">reader <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>