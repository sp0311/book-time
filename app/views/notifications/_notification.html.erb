<% user = User.find(notification.from_user_id) %>
<% book = Book.find(notification.book_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message"><%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message"><%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag book.picture.url), book_path(book), class: 'book-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to book.name, book_path(book) %></p>
      <p><%= book.thoughts %></p>
    </div>
  </div>
</li>